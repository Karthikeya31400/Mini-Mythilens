{
  "name": "TimelineEvent",
  "type": "object",
  "properties": {
    "site_name": {
      "type": "string",
      "description": "Heritage site name"
    },
    "year": {
      "type": "number",
      "description": "Year of the event"
    },
    "era": {
      "type": "string",
      "description": "Historical era (e.g., Ancient, Medieval, Modern)"
    },
    "title": {
      "type": "string",
      "description": "Event title"
    },
    "description": {
      "type": "string",
      "description": "Event description"
    },
    "key_figures": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Important people involved"
    },
    "is_ai_generated": {
      "type": "boolean",
      "default": true,
      "description": "Whether generated by AI"
    },
    "source": {
      "type": "string",
      "description": "Source of information"
    },
    "image_url": {
      "type": "string",
      "description": "URL of image representing this event"
    }
  },
  "required": [
    "site_name",
    "year",
    "title",
    "description"
  ],
  "rls": {
    "create": true,
    "read": true,
    "update": {
      "user_condition": {
        "role": "admin"
      }
    },
    "delete": {
      "user_condition": {
        "role": "admin"
      }
    }
  }
}
