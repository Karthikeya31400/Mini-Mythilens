{
  "name": "HeritagePath",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the learning path"
    },
    "description": {
      "type": "string",
      "description": "Description of the journey"
    },
    "theme": {
      "type": "string",
      "enum": [
        "architecture",
        "mythology",
        "ancient_civilizations",
        "religious_heritage",
        "cultural_traditions",
        "historical_periods"
      ],
      "description": "Theme category of the path"
    },
    "difficulty_level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "default": "beginner",
      "description": "Difficulty level of the path"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "order": {
            "type": "number"
          },
          "site_name": {
            "type": "string"
          },
          "site_location": {
            "type": "string"
          },
          "latitude": {
            "type": "number"
          },
          "longitude": {
            "type": "number"
          },
          "content": {
            "type": "string"
          },
          "image_url": {
            "type": "string"
          },
          "quiz": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string"
              },
              "options": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "correct_answer": {
                "type": "number"
              }
            }
          }
        }
      },
      "description": "Sequential steps in the learning path"
    },
    "completion_badge": {
      "type": "string",
      "description": "Badge awarded upon completion"
    },
    "estimated_duration": {
      "type": "string",
      "description": "Estimated time to complete (e.g., '2 hours')"
    },
    "total_steps": {
      "type": "number",
      "description": "Total number of steps in the path"
    },
    "is_ai_generated": {
      "type": "boolean",
      "default": true,
      "description": "Whether generated by AI"
    }
  },
  "required": [
    "title",
    "description",
    "theme",
    "steps"
  ],
  "rls": {
    "create": true,
    "read": true,
    "update": {
      "user_condition": {
        "role": "admin"
      }
    },
    "delete": {
      "user_condition": {
        "role": "admin"
      }
    }
  }
}
